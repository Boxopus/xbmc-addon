<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<addon id="plugin.video.boxopus"
    name="boxopus"
    version="1.0.0"
    provider-name="Boxopus (info@boxopus.com)">
    <requires>
        <import addon="xbmc.python" version="2.14.0" />
        <import addon="script.module.simplejson" version="3.3.0" />
        <import addon="script.module.requests" version="1.1.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video audio image</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Boxopus for XBMC</summary>
        <description lang="en">Boxopus downloads torrents into the private space or in the cloud. Get one from https://boxopus.com</description>
